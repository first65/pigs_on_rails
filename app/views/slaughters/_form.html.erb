<hr>

<%= simple_form_for(@slaughter, html: { class: 'form-horizontal' }) do |f| %>

  <%= f.input :butcher_id %>

  <%= f.input :transport_id %>
  
  <div class="control-group">
    <label class="control-label">Pigs to be slaughtered</label>
    <div class="controls">
      <% @pigs.each do |pig| %>
        <%= hidden_field_tag "slaughter[pig_ids][]" %>
        <label class="checkbox">
          <%= check_box_tag "slaughter[pig_ids][]", pig.id, @slaughter.pigs.empty? ? false : @slaughter.pigs.include?(pig), :id => "slaughter_pig_ids_#{pig.id}" %>
          <%= pig.name %>
        </label>
      <% end %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: "btn btn-success" %>
  </div>
  
<% end %>
