<h1>All <%= pluralize(@pigs.count, "pig") %></h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Status</th>
    <th>Litter</th>
    <th></th>
    <th></th>
  </tr>

<% @pigs.each do |pig| %>
  <tr>
    <td><%= link_to pig.name, pig %></td>
    <td><%= pig.age %></td>
    <td><%= pig.health %></td>
    <td><%= pig.litter.name unless pig.litter.nil? %></td>
    <td><%= link_to 'Edit', edit_pig_path(pig) %></td>
    <td><%= link_to 'Delete', pig, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

