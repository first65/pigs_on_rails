<h1>Listing pigs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Status</th>
    <th>Litter</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pigs.each do |pig| %>
  <tr>
    <td><%= pig.name %></td>
    <td><%= pig.age %></td>
    <td><%= pig.status %></td>
    <td><%= pig.litter.name unless pig.litter.nil? %></td>
    <td><%= link_to 'Show', pig %></td>
    <td><%= link_to 'Edit', edit_pig_path(pig) %></td>
    <td><%= link_to 'Destroy', pig, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

