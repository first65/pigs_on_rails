<%= simple_form_for(@litter, html: { class: "form-horizontal" }) do |f| %>

  <%= f.input :name %>
  
  <%= f.input :sow_id, collection: Pig.all, value_method: :id, label_method: :name %>
  
  <div class="control-group">
    <label class="control-label" for="">No. of piglets</label>
    <div class="controls">
      <%= number_field_tag 'no_of_piglets', nil, :in => 1...20 %>
    </div>
  </div>
  
  <div class="form-actions">
    <%= f.submit nil, class: "btn btn-success" %>
  </div>
  
<% end %>
